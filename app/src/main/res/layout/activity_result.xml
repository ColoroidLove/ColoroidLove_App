<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/res_img"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:src="@drawable/result_springlight" />

        <TextView
            android:id="@+id/res_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nanumr"
            android:gravity="center"
            android:text="000님의 결과"
            android:textSize="25dp" />


        <TextView
            android:textColor="@color/black"
            android:id="@+id/res_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nanumr"
            android:gravity="center"
            android:text="샤방샤방 가을 뮤트"
            android:textSize="30dp" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/res_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumr"
            android:gravity="center"
            android:text="파스텔 톤 컬러 중에서 맑고 깨끗한 느낌의 컬러입니다\n살랑살랑하고 깨끗한 느낌이 도는~\n마치 솜사탕 같은 컬러가 찰떡!"
            android:textSize="17dp" />

        <TextView

            android:textColor="@color/black"
            android:background="#F1F1F1"
            android:id="@+id/res_artist"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:paddingTop="12dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/nanumr"
            android:text="대표적인 연예인 : 장원영, 유예영, 조해정, 선우"
            android:textSize="17dp" />

        <TextView
            android:textColor="@color/black"
            android:background="#F1F1F1"
            android:id="@+id/res_item"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:paddingTop="12dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/nanumr"
            android:text="추천 아이템 : 블랙헤어컬러, 실버 악세사리"
            android:textSize="17dp" />

        <TextView
            android:textColor="@color/black"
            android:background="#F1F1F1"
            android:id="@+id/res_color"
            android:layout_marginLeft="20dp"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:paddingTop="12dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:fontFamily="@font/nanumr"
            android:text="추천 컬러 : 파스텔블루, 블랙, 실버, 파스텔핑크"
            android:textSize="17dp" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:id="@+id/res_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumr"
            android:gravity="center"
            android:textSize="20dp"
            android:text="더 자세히 알고 싶다면?\n\n Coloroid Love Web에서 확인하세요!" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumr"
            android:gravity="center"
            android:textSize="20dp"
            android:text="\n.\n.\n.\n.\n.\n" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumr"
            android:layout_marginBottom="80dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btnEnd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/login_round_white_stroke"
            android:gravity="center"
            android:text="종료하기"
           android:textSize="20dp" />

    </LinearLayout>

</ScrollView>